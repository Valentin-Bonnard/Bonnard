<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" charset="utf-8">
    <!--[if lt IE 9]>
    <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Stylesheet.css")" type="text/css" rel="stylesheet" />
    <script src="@Url.Content("~/Scripts/overlay.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/tableau.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jeux.js")" type="text/javascript"></script>
</head>
<body>
    <!-- Top header black version-->
    <div class="top-header top-header-fixed">
        <a href="/" name="Bonnard_Valentin">
            <img id="logo" src="@Url.Content("~/Content/Pics/Home/lg.png")">
        </a>
        <div class="menu">
            <div id="myNav" class="overlay">
                <!-- For create whole black overlay and to close-->
                <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
                <div class="overlay-content">
                    <h1 class="fc-r3">@Html.ActionLink("Work", "Index", "Home")</h1>
                    <h1 class="fc-r3">@Html.ActionLink("About", "About", "Home")</h1>
                    <h1 class="fc-r3">@Html.ActionLink("Contact", "Contact", "Home")</h1>
                </div>
                <div id="copyRight">
                    <h6 class="fc-r6">@ViewBag.CopyRight</h6>
                </div>
            </div>
            <button class="m-hamburger m-hamburger--rot" onclick="openNav()">
                <span>toggle menu</span>     <!-- Menu to open overlay -->
            </button>
        </div>
    </div>
    <!-- End Top header black version-->
    <!-- Begin body "presentation" -->
    <div class="container body-content">
        @RenderBody()
    </div>                                   <!-- End body "presentation" -->

    @if (ViewBag.Show == true)
    {
        <div class="portfolio-preview body-content">
            @RenderPage("~/Views/Home/Work_Preview.cshtml"):
        </div>
    }                                        <!--  Work preview "presentation" -->
    <!-- End work preview "presentation" -->
</body>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
</html>

